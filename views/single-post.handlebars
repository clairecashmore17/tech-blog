<article class="post">
  <div class="title dark-background">
    <p class="post-title dark-background">{{post.title}}</p>
    <span>(Posted by {{post.user.username}} on {{post.created_at}})</span>
  </div>
  <div class="meta">

    {{post.post_text}}
    |
    <a href="/post/{{id}}"> View {{comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
  </form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}